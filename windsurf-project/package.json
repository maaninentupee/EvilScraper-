{
  "name": "windsurf-project",
  "version": "1.0.0",
  "description": "AI Service with local and API model fallback mechanism",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:fast": "jest --config ./test/jest-e2e.json --testMatch='**/app.e2e-spec.ts'",
    "test:e2e:all": "scripts/run-e2e-tests.sh",
    "test:integration": "jest --testPathPattern=integration",
    "test:load": "k6 run load-test.js",
    "test:network-delay": "npx ts-node test/manual/network-delay.test.ts",
    "analyze:ollama": "scripts/analyze-ollama-resources.sh",
    "analyze:ollama:extended": "scripts/analyze-ollama-resources-extended.sh",
    "monitor:ollama": "scripts/monitor-ollama-resources.sh",
    "monitor:ollama:short": "scripts/monitor-ollama-resources.sh -d 60 -i 2",
    "monitor:ollama:netdata": "scripts/ollama-netdata-collector.sh",
    "warmup:ollama": "scripts/warmup-ollama.sh",
    "test:with-warmup": "npm run warmup:ollama && npm test",
    "test:e2e:with-warmup": "npm run warmup:ollama && npm run test:e2e",
    "test:all": "npm run warmup:ollama && npm test && npm run test:e2e && npm run test:load",
    "test:all:report": "scripts/run-all-tests.sh"
  },
  "dependencies": {
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/platform-express": "^9.3.12",
    "axios": "^1.8.2",
    "openai": "^4.20.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.4.3",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.12",
    "autocannon": "^8.0.0",
    "jest": "^29.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  }
}
